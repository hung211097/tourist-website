{
  "presets": [
    [
      "next/babel",
      {
        "preset-env": {
          "modules": "commonjs"
        },
        "styled-jsx": {
          "plugins": [
            "styled-jsx-plugin-sass",
            ["styled-jsx/babel", { "plugins": ["styled-jsx-plugin-postcss"] }]
          ]
        }
      }
    ]
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./"],
        "alias": {
          "styles": "./styles",
          "components": "./components"
        }
      }
    ]
  ]
}
